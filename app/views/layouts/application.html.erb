<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
      <%= javascript_importmap_tags %>
  </head>

  <body>

    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column w-100">
      <header class="masthead mb-auto">
        <div class="inner">
          <h3 class="masthead-brand"><%= t("cover") %></h3>
          <nav class="nav nav-masthead justify-content-center">
            <%= link_to t("questionnaires"), questionnaires_path, class: "nav-link " + active_class(questionnaires_path) %>
            <%= link_to t("create"), static_pages_new_path, class: "nav-link " + active_class(static_pages_new_path) %>
            <%= link_to t("edit"), static_pages_edit_path, class: "nav-link " + active_class(static_pages_edit_path) %>
            <% if user_signed_in? %>
              <%= link_to current_user.name, root_path, class: "nav-link " + active_class(root_path) %>
                <%= link_to t("logout"), destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "nav-link" %>
            <% else %>
              <%= link_to t("login"), new_user_session_path, class: "nav-link" %>
            <% end %>
          </nav>
        </div>
      </header>

      <main role="main" class="inner cover">
        <%= yield %>
      </main>

      <footer class="mastfoot mt-auto">
        <div class="inner">
          <p><%= t("introduce") %></p>
        </div>
      </footer>
    </div>

  </body>
  </html>
